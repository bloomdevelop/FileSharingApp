@inherits LayoutComponentBase
@implements IDisposable
@inject UserService UserService

<div>
    <main>
        <article class="content">
            <header class="pb-3 mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0 fw-bold" style="color: var(--accent); letter-spacing: -1px;">FileShare</h1>
                    @if (UserService.CurrentUsername != null)
                    {
                        <div class="d-flex align-items-center gap-3">
                            <span class="opacity-75">Logged in as <strong class="text-white">@UserService.CurrentUsername</strong></span>
                            <button class="btn btn-action-secondary btn-sm" @onclick="UserService.LogoutAsync">Logout</button>
                        </div>
                    }
                </div>
            </header>
            
            @if (_isInitializing)
            {
                <div class="py-5 text-center">
                    <div class="spinner-border" style="color: var(--accent);" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (UserService.CurrentUsername == null)
            {
                <div class="scrollable-content">
                    <FileSharingApp.Components.Pages.Login/>
                </div>
            }
            else
            {
                <div class="scrollable-content">
                    @Body
                </div>
            }
        </article>
    </main>
</div>

@code {
    private bool _isInitializing = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await UserService.InitializeAsync();
            UserService.OnChange += StateHasChanged;
            _isInitializing = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        UserService.OnChange -= StateHasChanged;
    }
}

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>